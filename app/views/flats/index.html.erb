

<div class="container mt-3">

  <div class="row">
    <div class="col-12"><h1>All our Flats</h1></div>
  </div>

  <div class="row">
    <div class="col"><p>All 4 flats</p></div>
  </div>

  <div class="row">
              <% @flats.each do |flat| %>
              <div class="col-md-4">
                <div class="flat-card">
                  <div class="card-body">
                    <div class="flat-card-content">
                      <h5 class="card-title"><%= flat.name%></h5>
                      <p class="card-text"><%= flat.address%></p>
                      <p class="card-text"><i class="fa-solid fa-users"></i></i> <%= flat.number_of_guests%></p>
                      <p class="card-text"><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night%></p>
                    </div>
                    <div class="flat-card-action">
                      <a href="#" class="btn btn-primary">More info</a>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
  </div>

</div>
